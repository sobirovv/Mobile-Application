<resources>
    <style name="AppText">
        <item name="android:textColor">#252525</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#252525</item>
    </style>

    <style name="AppSubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#252525</item>
    </style>

    <style name="AppButton">
        <item name="android:background">@drawable/purplebox</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawableEnd">@drawable/next</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="AppEditText">
        <item name="android:background">@drawable/rectangle1</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#B0B0B0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#252525</item>
    </style>

    <style name="TextStyle.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#252525</item>
    </style>

    <style name="TextStyle.TermsLink">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#5A79FF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Footer">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#252525</item>
    </style>

    <style name="TextStyle.FooterLink">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#6C63FF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputStyle">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">#FFFFFF</item>
        <item name="hintTextColor">#B0B0B0</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#B0B0B0</item>
    </style>

    <style name="ButtonStyle.Primary">
        <item name="android:backgroundTint">#6C63FF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#252525</item>
    </style>

        <style name="ButtonStyle">
            <item name="android:background">?android:attr/selectableItemBackground</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:padding">16dp</item>
        </style>

        <style name="TextStyle">
            <item name="android:textColor">#000000</item>
            <item name="android:textSize">16sp</item>
        </style>

</resources>